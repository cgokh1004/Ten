    "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>


	<definition name="main" template="/WEB-INF/views/templates/template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/templates/top.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/templates/bottom.jsp" />
	</definition>

	<!-- definition의 이름은 controller에서 리턴되는 뷰의 이름 -->
	<definition name="/home" extends="main">
		<put-attribute name="title" value="Default Page"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
	</definition>

	<definition name="/travel/list" extends="main">
		<put-attribute name="title" value="Travel list Page"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/travel/list.jsp" />
	</definition>
	
	<definition name="/travel/read" extends="main">
		<put-attribute name="title" value="Travel read Page"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/travel/read.jsp"/>
	</definition>
	
	<definition name="/travel/create" extends="main">
		<put-attribute name="title" value="Travel create Page"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/travel/create.jsp"/>
	</definition>
	
</tiles-definitions> 

